@model Book_Store.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Card -->
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white fw-bold">
                    ⚠ Delete Author
                </div>
                <div class="card-body">
                    <h5 class="card-title mb-3">Are you sure you want to delete this author?</h5>

                    <dl class="row mb-3">
                        <dt class="col-sm-4 fw-bold text-secondary">ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-4 fw-bold text-secondary">Full Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">⬅ Back to List</a>
                            <button type="submit" class="btn btn-danger fw-bold">🗑 Delete</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
